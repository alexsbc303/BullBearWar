<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/buyLinearLayout"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:text="Set Your Bid Price:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/autoAskPrice"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:inputType="numberDecimal"
                android:maxLength="8" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume To Buy: "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/autoAskShares"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:inputType="number"
            android:maxLength="8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/autoTotalBuyPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="0"
            android:textColor="@color/blue"
            android:textSize="25dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Valid Period: "
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/startll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Start:  "
                android:textSize="17dp" />

            <Button
                android:id="@+id/startDateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start date" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/endll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="7dp"
                android:text="End:  "
                android:textSize="17dp" />

            <Button
                android:id="@+id/endDateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="end date" />

        </LinearLayout>


        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="**Stock will be automatically bought if your target bid price is higher or equal to the ask price in market."
            android:textSize="15dp" />


        <Button
            android:id="@+id/autoBuyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="auto buy" />

    </LinearLayout>
</RelativeLayout>