<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/sellLinearLayout"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:text="Set Auto Ask Price:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/autoBidPrice"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:inputType="numberDecimal"
                android:maxLength="8" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume To Sell: "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/autoBidShares"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:inputType="number"
            android:maxLength="8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Income: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/autoTotalSellPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="0"
            android:textColor="@color/blue"
            android:textSize="25dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Valid Period: "
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/startll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Start:  "
                android:textSize="17dp" />

            <Button
                android:id="@+id/startDateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start date" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/endll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="7dp"
                android:text="End:  "
                android:textSize="17dp" />

            <Button
                android:id="@+id/endDateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="end date" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="**Stock will be automatically sold if your target ask price is lower or equal to the bid price in market."
            android:textSize="15dp" />

        <Button
            android:id="@+id/autoSellBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="auto sell" />

    </LinearLayout>
</RelativeLayout>